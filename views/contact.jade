extends layout

block content
    h2 Send me an Email

    form(action="/contact" method="post")
        | Your email address:
        br
        input(type="text" name="email" value=messageBody.email id="email" required)
        br
        | Subject:
        br
        input(type="text" name="subject" size="38" id="subject" value=messageBody.subject)
        br
        | Message body:
        br
        textarea(name="text" cols="40" rows="10" id="text" required) #{messageBody.text}
        br
        button(type="submit" value="Send") Send
    if(sent == 1)
        p.sent Email sent! I'll get back to you as soon as possible.
    else if(sent==2)
        p.sent Error: Email not sent. #{error}

